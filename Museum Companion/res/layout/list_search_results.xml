<?xml version="1.0" encoding="utf-8"?>
<!-- Based on original form http://www.vogella.com/tutorials/AndroidListView/article.html#tutorial_ownadapter -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/search_results_teaser_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/search_results_artefact_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/icon"
        android:layout_toRightOf="@+id/search_results_teaser_image"
        android:gravity="center_vertical"
        android:text="Artefact name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/search_results_institution"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/search_results_artefact_name"
        android:layout_toRightOf="@+id/search_results_teaser_image"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description"
        android:textSize="12sp" />

</RelativeLayout>